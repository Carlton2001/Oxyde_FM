{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Oxyde_FM",
  "version": "1.0.2",
  "identifier": "com.oxyde.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Oxyde",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' blob: data: asset: http://asset.localhost https://asset.localhost tauri://localhost; video-src 'self' blob: asset: http://asset.localhost https://asset.localhost tauri://localhost; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "publisher": "Oxyde",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}